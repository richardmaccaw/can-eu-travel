{
     "name": "schengen-calculator",
     "version": "1.0.0",
     "private": true,
     "scripts": {
          "build:css": "tailwindcss -i ./public/tailwind.css -o ./public/style.css --minify",
          "build": "npm run build:css",
          "dev:css": "tailwindcss -i ./public/tailwind.css -o ./public/style.css --watch",
          "dev:server": "live-server --port=3000 --no-browser --watch=public --open=public",
          "dev": "npm run build:css && npm-run-all --parallel dev:*"
     },
     "devDependencies": {
          "live-server": "^1.2.2",
          "npm-run-all": "^4.1.5",
          "tailwindcss": "^3.3.5"
     }
}
